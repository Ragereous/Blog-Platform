@model blog_template_practice.Models.Content

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Style/StyleSheet.css" />
    <title>Blogger Gamer's Paradise</title>
</head>
<body>

    <div class="content-detail-container">
        <p>Title: @Model.Title</p>
        <p>Author: @Model.Author</p>
        <p>Category: @Model.Category.Name</p>
        <p>@Model.PublishDate</p>
        <p>@Model.Body</p>
    </div>

    <p class="links-container">
        <a class="button" href="/Category/Index/">Return to Category List</a>
        <a class="button" href="/Category/Details/@Model.Category.Id">Return to @Model.Category.Name List</a>
    </p>

    <p class="links-container">
        <a class="button" href="/Content/Delete/@Model.Id">Delete Blog</a>
        <a class="button" href="/Content/Update/@Model.Id">Update Blog</a>
    </p>


</body>

</html>
